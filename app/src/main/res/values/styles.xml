<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginEditText">
        <item name="android:layout_width">@dimen/login_edittext_width</item>
        <item name="android:height">@dimen/login_edittext_height</item>
        <item name="android:textSize">@dimen/login_edittext_textsize</item>
        <item name="met_baseColor">@android:color/black</item>
        <item name="met_floatingLabel">highlight</item>
        <item name="met_primaryColor">#982360</item>
        <item name="met_underlineColor">#003587</item>
    </style>

    <!--底部tab标签 LinearLayout的style-->
    <style name="BottomLinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--底部tab标签 ImageButton-->
    <style name="BottomImageButton">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">#00000000</item>
        <item name="android:clickable">false</item>
    </style>

    <!--底部tab标签 TextView-->
    <style name="BottomTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColor">#BBBBBB</item>
    </style>

    <style name="MessageTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/shape_message_time</item>
        <item name="android:padding">3dp</item>
        <item name="android:text">当前时间</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ChatAvatar">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:src">@mipmap/ic_launcher</item>
    </style>

    <style name="ChatLeftLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_below">@id/ll_message_time</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <style name="ChatRightLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_below">@id/ll_message_time</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:minHeight">50dp</item>
    </style>

</resources>
